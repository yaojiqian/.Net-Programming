<Window x:Class="RESTCall.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RESTCall"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" x:Name="btnSendRequest" Content="Get Campaigns" Click="btnSendRequest_Click"/>
        <Button Grid.Row="1" x:Name="btnCampaignID" Content="Get Campaign by ID" Click="btnCampaignID_Click"/>
        <Button Grid.Row="2" x:Name="btnPostCampaign" Content="Adding a new Campaign" Click="btnPostCampain_Click"/>
    </Grid>
</Window>
